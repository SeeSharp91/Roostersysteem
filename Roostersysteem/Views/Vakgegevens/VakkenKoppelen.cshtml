@model List<SelectListItem>
@{
    ViewBag.Title = "VakkenKoppelen";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>

<body>

    <h1>Roostersysteem Zuyd</h1>

    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home", "Home", "Home")</li>
        <li>Vakgegevens</li>
        <li class="active">Vakken Koppelen </li>
    </ol>

    <div class="row">
        <div class="col-lg-12">
            <h1>
                Selectie vakken
            </h1>
            <p>Selecteer de mogelijke vakken om te geven:</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            @using (Html.BeginForm("VakkenKoppelen", "Vakgegevens", FormMethod.Post))
            {
                <table>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>
                                @Html.CheckBoxFor(m => m[i].Selected)
                            </td>
                            <td>
                                @Html.DisplayFor(m => m[i].Text)
                                @Html.HiddenFor(m => m[i].Value)
                                @Html.HiddenFor(m => m[i].Text)
                            </td>
                        </tr>
                    }
                </table>
                <br />
                <input type="submit" id="buttonStyle" value="Opslaan" onclick="SelectieVak(List<SelectListItem> items)" />
            }
        </div>

        <div class=" col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">Mijn Vakken</div>
                <div class="panel-body">
                    <table>
                        <tr>
                            <td>
                                @if (ViewBag.WeergaveVakken != null)
                                {
                                    @ViewBag.WeergaveVakken
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
