<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Roostersysteem</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Styles.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container col-lg-12">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapsible">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="./default.aspx">
                    <img src="~/Images/ZuydMiniLogo.png">
                </a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-collapsible">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Rooster", "Rooster", "Rooster")</li>
                    <li>@Html.ActionLink("Vakgegevens", "Contacturen", "Vakgegevens")</li>
                    <li>@Html.ActionLink("Vakken koppelen", "VakkenKoppelen", "Vakgegevens")</li>
                    <li>@Html.ActionLink("Uren", "UrenDocent", "Uren")</li>
                </ul>
                <div class="navbar-right">
                    <form class="navbar-form  ">
                        <div class="form-group" style="display:inline;">
                            <ul class="nav navbar-nav ">
                                <li class=" dropdown">
                                    <a href="#" class="dropdown-toggle active" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ingelogd als  <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Mijn gegevens", "MijnGegevens", "Profiel")</li>
                                    </ul>
                                </li>
                                <li class=""><a href="#">Uitloggen</a></li>
                            </ul>
                        </div>
                    </form>
                </div>
                <div class="col-sm-2 col-md-2" style="float:right; max-width:200px !important;">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" id="Zoekbalk" class="form-control" placeholder="Zoeken" name="q">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search" style="border-color: red !important;"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </nav>


    <nav class="navbar navbar-default" style="margin-bottom:unset !important;" role="navigation">
        <div class="col-lg-1">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapsed">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>
        <div class="navbar-collapse collapse" id="navbar-collapsed">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Link</a></li>
                <li><a href="#">Link</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">test</a></li>
                        <li><a href="#">test1</a></li>
                        <li><a href="#">test2</a></li>
                        <li><a href="#">test3</a></li>
                        <li><a href="#">test4</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content col-lg-11 col-lg-offset-1">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>