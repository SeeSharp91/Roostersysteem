<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Roostersysteem HSZ</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Styles.css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

</head>
<body>

    <div class="navbar-wrapper">
        <div class="container-fluid">
            <nav class="navbar navbar-fixed-top">
                <div class="col-lg-1"> @* Button voor menu linkerzijde *@
                    <button class="buttonLinksMenu" data-toggle="collapse" href="#navigatieLinks" role="button" >
                        &#9776; 
                    </button>
                </div>

                <div class="container-fluid col-lg-11">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Roostersysteem</a>
                    </div>


                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#" class="">Home</a></li>
                            <li class=" dropdown">
                                <a href="#" class="dropdown-toggle " data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Vakgegevens <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li class=" dropdown">
                                        @Html.ActionLink("Contact uren", "ContactUren", "Vakgegevens")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Vakken Koppelen", "VakkenKoppelen", "Vakgegevens")
                                    </li>
                                </ul>
                            </li>

                            <li>@Html.ActionLink("Rooster", "Rooster", "Rooster")</li>
                            <li class=" dropdown">
                                <a href="#" class="dropdown-toggle " data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Uren <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Uren Docent", "UrenDocent", "Uren")</li>
                                    <li>@Html.ActionLink("Uren Roosteraar", "UrenRoosteraar", "Uren")</li>
                                </ul>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav pull-right">
                            <li class=" dropdown">
                                <a href="#" class="dropdown-toggle active" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ingelogd als  <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Mijn gegevens", "MijnGegevens", "Profiel")</li>
                                </ul>
                            </li>
                            <li class=""><a href="#">Uitloggen</a></li>
                        </ul>

                        <div class="col-sm-3 col-md-3" style="float:right;">
                            <form class="navbar-form" role="search">
                                <div class="input-group">
                                    <input type="text" id="Zoekbalk" class="form-control" placeholder="Zoeken" name="q">
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search" style="border-color: red !important;"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    @* dit moet het menu worden aan de linkerzijde, dropdown moet aangepast worden*@

    <div class="col-lg-1">
        <div id="navigatieLinksButton" >
            <div id="navigatieLinks" class="collapse">
                <ul class="navigatieLinksMenu">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Test</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Test item</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">test</a></li>
                            <li><a href="#">test1</a></li>
                            <li><a href="#">test2</a></li>
                            <li><a href="#">test3</a></li>
                            <li><a href="#">test4</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            
        </div>
    </div>

    <div class="container body-content col-lg-11">
        <div class="row" id="bodyStandaard">
        
        </div>
        
        @RenderBody()
    </div>

    <div>
        <hr />
            <footer class="col-lg-offset-1 col-lg-11">
                <p>&copy; @DateTime.Now.Year - Roostersysteem HSZ - Casusgroep 2.1</p>
            </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>